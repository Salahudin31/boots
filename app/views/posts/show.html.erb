<% provide(:page_tittle, @post.tittle) %>

<div class="mx-auto text-center">
	<p id="notice"><%= notice %></p>

	<h2 class="text-white mb-4">
	  <strong>Tittle:</strong>
	  <%= @post.tittle %>
	</h2>

	<p class="text-white-50">
	  <strong>Body:</strong>
	  <%= @post.body %>
	</p>

	<p class="text-white-50">
	  <strong>Description:</strong>
	  <%= @post.description %>
	</p>

	<p class="text-white-50">
	  <strong>Slug:</strong>
	  <%= @post.slug %>
	</p>

	<h4><%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Back', posts_path %></h4>
</div>